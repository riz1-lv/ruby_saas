<div class = container>
 <div class = "row">
    <h3 class = text-center>Contact Us</h3>
    
   <div class = "col-md-4 col-md-offset-4">
     <%= flash[:notice] %>
     <div class = "well">
       
        <%= form_for @contact do |f| %>
          <div class = "form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "First Name Last Name" %>
          </div> 
          
          <div class = "form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class:'form-control', placeholder: "email@example.com" %>
          </div>
      
          <div class = "form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class:'form-control', placeholder: "Questions, comments, ect." %>
            <br>
            <%= f.submit "Submit", class: 'btn btn-default' %>
          </div>  
        
       <%end%>
       
    </div>
   </div>
  </div>
</div>